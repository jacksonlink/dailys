<%- model_class = Late -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:schedule) %></th>
      <th><%= model_class.human_attribute_name(:impediment) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lates.each do |late| %>
      <tr>
        <td><%= link_to late.id, late_path(late) %></td>
        <td><%= late.date %></td>
        <td><%= late.schedule %></td>
        <td><%= late.impediment %></td>
        <td><%= late.user_id %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      late_path(late), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_late_path(late), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      late_path(late),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_late_path,
            :class => 'btn btn-primary' %>
<br>
<%= will_paginate @lates %>